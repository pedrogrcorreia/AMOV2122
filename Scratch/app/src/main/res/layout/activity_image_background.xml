<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ImageBackgroundActivity"
    android:orientation="vertical"
    android:background="@color/cor_l1"
    android:padding="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Title: "
        android:textColor="@color/cor_c1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edTitle"
        android:maxLines="1"
        android:maxLength="25"
        android:hint="Write title"
        android:fontFamily="monospace" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@color/cor_n1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/cor_c1"
            android:text="Background Image" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnImage"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="New photo" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frPreview"
            android:background="@color/cor_c1" />

    </LinearLayout>

</LinearLayout>